  langid = {english},
  pmid = {29736271},
  keywords = {cause of death,health policy,population surveillance,systems research,verbal autopsy},
  file = {/Users/rrwen/Google Drive/Zotero/thomas_et_al_2018_verbal_autopsy_in_health_policy_and_systems.pdf}
}

